{
  "name": "@microbuild/ui-collections",
  "version": "0.1.0",
  "description": "Dynamic collection components (Form, List) for Microbuild projects",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --external @mantine/core --external @mantine/dates --external @mantine/hooks --external @tabler/icons-react",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  },
  "peerDependencies": {
    "@mantine/core": "^8.0.0",
    "@mantine/dates": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "@microbuild/services": "workspace:*",
    "@microbuild/types": "workspace:*",
    "@microbuild/ui-form": "workspace:*",
    "@tabler/icons-react": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "microbuild",
    "collection",
    "form",
    "list",
    "directus",
    "mantine",
    "react"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microbuild/ui-collections"
  }
}
