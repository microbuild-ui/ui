{
  "name": "@microbuild/cli",
  "version": "0.1.4",
  "description": "CLI tool for adding Microbuild components to your project - like shadcn/ui",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "microbuild": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microbuild-ui/ui.git",
    "directory": "packages/cli"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.9"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "cli",
    "components",
    "daas",
    "cms",
    "microbuild",
    "shadcn",
    "copy-own",
    "ui"
  ],
  "author": "Microbuild",
  "license": "MIT"
}
