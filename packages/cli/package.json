{
  "name": "@microbuild/cli",
  "version": "1.0.0",
  "description": "CLI tool for adding Microbuild components to your project - like shadcn/ui",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "microbuild": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "fs-extra": "^11.2.0",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli",
    "components",
    "directus",
    "cms",
    "microbuild",
    "shadcn"
  ],
  "author": "Microbuild",
  "license": "MIT"
}
