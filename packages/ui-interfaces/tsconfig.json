{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules", 
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "src/file/File.tsx",
    "src/file-image/FileImage.tsx",
    "src/files/Files.tsx",
    "src/input-block-editor/**",
    "src/rich-text-html/**",
    "src/rich-text-markdown/**",
    "src/map/**"
  ]
}
