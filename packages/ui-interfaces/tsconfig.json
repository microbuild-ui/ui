{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "node_modules", 
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "src/__tests__/**",
    "src/**/Demo*.tsx",
    "src/group-detail/GroupDetailFormDemo.tsx",
    "src/file/File.tsx",
    "src/file-image/FileImage.tsx",
    "src/files/Files.tsx"
  ]
}
