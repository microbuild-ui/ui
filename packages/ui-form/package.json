{
  "name": "@microbuild/ui-form",
  "version": "0.1.0",
  "description": "Dynamic form component (VForm) for Microbuild projects - inspired by Directus v-form",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --external @mantine/core --external @mantine/hooks --external @tabler/icons-react",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "@mantine/core": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "@microbuild/services": "workspace:*",
    "@microbuild/types": "workspace:*",
    "@microbuild/ui-interfaces": "workspace:*",
    "@microbuild/utils": "workspace:*",
    "@tabler/icons-react": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-docs": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "storybook": "^8.6.12",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.0"
  },
  "keywords": [
    "microbuild",
    "form",
    "vform",
    "directus",
    "dynamic-form",
    "collection-form"
  ],
  "dependencies": {
    "@mantine/tiptap": "^8.3.10",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0"
  }
}
