{
  "name": "@microbuild/mcp",
  "version": "0.1.2",
  "description": "Model Context Protocol server for Microbuild components - enables AI agents to discover and use Microbuild packages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "microbuild-mcp": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microbuild-ui/ui.git",
    "directory": "packages/mcp-server"
  },
  "scripts": {
