{
  "name": "microbuild-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Microbuild monorepo workspace - shared components between Next.js projects",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:mcp": "pnpm --filter @microbuild/mcp-server build",
    "build:cli": "pnpm --filter @microbuild/cli build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf node_modules .next dist",
    "install:all": "pnpm install",
    "storybook": "pnpm --filter @microbuild/ui-interfaces storybook",
    "cli": "pnpm --filter @microbuild/cli build && node packages/cli/dist/index.js",
    "mcp:dev": "pnpm --filter @microbuild/mcp-server dev"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.17.0"
}
