{
  "name": "microbuild-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Shared components between Next.js projects",
  "scripts": {
    "build": "pnpm -r build",
    "build:cli": "pnpm --filter @microbuild/cli build",
    "build:host": "pnpm --filter storybook-host build",
    "build:mcp": "pnpm --filter @microbuild/mcp build",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:storybook": "bash scripts/build-storybooks.sh",
    "changeset": "changeset",
    "clean": "pnpm -r exec rimraf node_modules .next dist",
    "cli": "pnpm --filter @microbuild/cli build && node packages/cli/dist/index.js",
    "dev": "pnpm -r --parallel dev",
    "dev:host": "pnpm --filter storybook-host dev",
    "install:all": "pnpm install",
    "lint": "pnpm -r lint",
    "mcp:dev": "pnpm --filter @microbuild/mcp dev",
    "publish-packages": "pnpm build && changeset publish",
    "release": "pnpm build && changeset publish",
    "start:host": "pnpm --filter storybook-host start",
    "storybook:interfaces": "pnpm --filter @microbuild/ui-interfaces storybook",
    "storybook:collections": "pnpm --filter @microbuild/ui-collections storybook",
    "storybook:form": "pnpm --filter @microbuild/ui-form storybook",
    "storybook:table": "pnpm --filter @microbuild/ui-table storybook",
    "test": "pnpm -r test",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:storybook": "playwright test --project=storybook",
    "test:storybook:table": "playwright test --project=storybook-table",
    "test:storybook:interfaces": "playwright test --project=storybook-interfaces",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@playwright/test": "^1.50.1",
    "dotenv": "^17.2.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.17.0",
  "dependencies": {
    "@mantine/form": "^8.3.14",
    "@mantine/tiptap": "^8.3.10",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.93.3",
    "@tiptap/extension-code-block-lowlight": "^3.13.0",
    "@tiptap/extension-color": "^3.13.0",
    "@tiptap/extension-highlight": "^3.13.0",
    "@tiptap/extension-placeholder": "^3.13.0",
    "@tiptap/extension-subscript": "^3.13.0",
    "@tiptap/extension-superscript": "^3.13.0",
    "@tiptap/extension-text-align": "^3.13.0",
    "@tiptap/extension-text-style": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "axios": "^1.13.2",
    "lowlight": "^3.3.0"
  }
}
